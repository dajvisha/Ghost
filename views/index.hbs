<div class="index-background">
    <div class="login-view">

        <form class="login-box" action="/login" method="POST">

            <div class="login-title">{{ login_form.title_label }}</div>

            <div class="login-form">
                <div class="login-input">
                    <label for="name">{{ login_form.username_label }}</label>
                    <input type="text" name="name" id="name">
                </div>

                <div class="login-input">
                    <label for="pass">{{ login_form.password_label }}</label>
                    <input type="password" name="pass" id="pass">
                </div>

                <div class="login-button">
                    <button>{{ login_form.login_button }}</button>
                </div>
            </div>
        </form>

    </div>
</div>
