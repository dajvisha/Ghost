<div class="index-background">

    <div class="login-view">

        {{#if login_error}}
            <div class="alert alert-danger" role="alert">
                {{ login_error }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {{/if}}

        <form class="login-box" action="/login" method="POST">

            <div class="login-title">{{ login_form.title_label }}</div>

            <div class="login-form">
                <div class="login-input">
                    <label for="name">{{ login_form.email_label }}</label>
                    <input type="email" name="email" id="email">
                </div>

                <div class="login-input">
                    <label for="pass">{{ login_form.password_label }}</label>
                    <input type="password" name="pass" id="pass">
                </div>

                <div class="login-button">
                    <button>{{ login_form.login_button }}</button>
                </div>
            </div>
        </form>

    </div>
</div>
